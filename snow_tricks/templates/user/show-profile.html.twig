{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.username|capitalize }}{% endblock %}

{% block body %}

    <h1>Profil de {{ user.username|capitalize }}</h1>

    <p>Bienvenue sur le profil de {{ user.username|capitalize }} !</p>
    <p class="small text-muted">Inscrit depuis le {{ user.createdAt|date('d/m/Y à H\\hi') }}</p>

    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MODO') %}
        <h3 class="mt-5">Informations privées</h3>
            <p>
                Adresse email : {{ user.email }} <br/>
                Role : {{ user.roles[0] }}
            </p>
            <div>
                <a class="btn btn-outline-primary" href="{{ path('app_user_edit', {'id': user.id}) }}">Éditer</a>
                <a class="btn btn-outline-primary" href="{{ path('app_user_index') }}">Retour</a>
            </div>
    {% else %}
        <div>
            <a class="btn btn-outline-primary" href="{{ path('app_home') }}">Retour à la page d'accueil</a>
        </div>
    {% endif %}

    <h3 class="mt-5">Figures postées par {{ user.username|capitalize }}</h3>

    {% if figures|length > 0 %}

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mt-0">

            {% for figure in figures %}

                {% set firstImage = figure.FigureImages|first %}

                <div class="col">
                    <div class="card h-100">

                        {% if firstImage %}
                            <a href="{{ path('app_figure_show', {'id': figure.id, 'slug': figure.slug}) }}">
                                <img class="card-img-top" src="{{ asset('/uploads/images/'~firstImage.filename) }}">
                            </a>
                        {% endif %}

                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('app_figure_show', {'id': figure.id, 'slug': figure.slug}) }}">
                                    {{ figure.name }}
                                </a>
                                {% if is_granted('FIGURE_EDIT', figure) %}
                                    <a href="{{ path('app_figure_edit', {'id': figure.id, 'slug': figure.slug}) }}" class="btn btn-outline-primary btn-sm" title="Modifier cette figure">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                {% endif %}
                                {% if is_granted('FIGURE_DELETE', figure) %}
                                    <form class="d-inline" method="post" action="{{ path('app_figure_delete', {'id': figure.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette figure ? Cette action est irréversible.');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ figure.id) }}">
                                        <button class="btn btn-outline-danger btn-sm" title="Supprimer cette figure"><i class="bi bi-trash3"></i></button>
                                    </form>
                                {% endif %}
                            </h5>
                        </div>

                        <div class="card-footer">
                            <small class="text-muted">
                                <i class="bi bi-person-fill"></i> Par {{ figure.user.userIdentifier|default("Anonyme")|capitalize }}
                                <i class="bi bi-tag-fill"></i>
                                {% if figure.category is not null %}
                                    <a href="{{ path('app_figures_by_category', {id: figure.category.id, slug: figure.category.slug}) }}">
                                        {{ figure.category.name|capitalize }}
                                    </a>
                                {% else %}
                                    Non-classé
                                {%endif%}
                            </small>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>

    {% else %}
        <p class="text-muted">{{ user.username|capitalize }} n'a rien publié pour l'instant...</p>
    {% endif %}

{% endblock %}
