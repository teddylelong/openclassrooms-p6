{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.username|capitalize }}{% endblock %}

{% block body %}

    <h1>Profil de {{ user.username|capitalize }}</h1>

    <p>Bienvenue sur le profile de {{ user.username|capitalize }} !</p>
    <p class="small text-muted">Inscrit depuis le {{ user.createdAt|date('d/m/Y à H\\hi') }}</p>

    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MODO') %}
        <h3>Informations privées</h3>
        <ul>
            <li>Adresse email : {{ user.email }}</li>
            <li>Role : {{ user.roles[0] }}</li>
        </ul>
        <a href="{{ path('app_user_edit', {'id': user.id}) }}">Éditer</a>
        {% include('user/_delete_form.html.twig') %}
    {% endif %}

    <p><a href="{{ path('app_user_index') }}">Retour</a></p>

{% endblock %}
