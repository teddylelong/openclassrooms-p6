{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel utilisateur{% endblock %}

{% block body %}

    <h1>Créer un nouvel utilisateur</h1>

    {{ form_start(userType) }}

        {{ form_errors(userType) }}

        {{ form_row(userType.username, {
            label: "Nom d'utilisateur :"
        }) }}
        {{ form_row(userType.email, {
            label: "Adresse email :"
        }) }}
        {{ form_row(userType.password, {
            label: "Mot de passe :"
        }) }}
        {{ form_row(userType.roles, {
            label: "Sélectionnez son role :"
        }) }}

        <button type="submit">Créer l'utilisateur</button>
    {{ form_end(userType) }}


{% endblock %}
