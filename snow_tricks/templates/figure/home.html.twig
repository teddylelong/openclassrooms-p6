{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block full_width %}
    <div id="intro" class="container">
        <div class="row align-items-center">
            <div class="col-12 col-md-4 p-4 p-md-0 intro-img">
                <img src="{{ asset('assets/images/snowboard_silhouette.png') }}" width="300" class="d-block mx-auto my-4 rounded-circle img-fluid">
            </div>
            <div class="col-12 col-md-8 p-4 p-md-0 intro-text">
                <h1 id="intro-h1">SNOW TRICKS</h1>
                <p class="fs-4">Le site communautaire dédié à la pratique du snowboard !</p>
            </div>
        </div>
    </div>
{% endblock full_width %}

{% block body %}

    {% if figures is empty %}

        <h2>Désolé...</h2>
        <p>Il n'y a pas encore de figure. Revenez un peu plus tard !</p>

    {% else %}
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mt-0" id="figures-grid">
            {% include '_parts/figure_grid.part.twig' %}
        </div>

        {% if pageTotal != 1 %}
            <div class="justify-content-center text-center">
                <a id="load-more" class="btn btn-primary btn-lg mt-4" href="/loadmore/2">
                    <i class="bi bi-arrow-clockwise"></i> Voir plus
                </a>
            </div>
        {% endif %}

    {% endif %}

    <script data-container="figures-grid" id="load-more-script" data-page-total="{{ pageTotal }}" data-page-href="loadmore" src="{{ asset('assets/js/load-more.js') }}"></script>

{% endblock %}
