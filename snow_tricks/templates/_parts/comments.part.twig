{% for comment in comments %}

    {% if comment.user.avatar is not null %}
        {% set avatar = asset('uploads/avatars/') ~ comment.user.avatar %}
    {% endif %}

    <div class="row g-0">
        <div class="col-2 col-xl-1 text-end">
            <img class="rounded-circle shadow me-3" width="55" src="{{ avatar|default(asset('assets/images/avatar/default.jpg')) }}">
        </div>
        <div class="col-10 col-xl-11">
            <div class="border border-primary border-4 border-end-0 border-top-0 border-bottom-0 px-2 py-3 bg-light">
                <p class="comment m-0">
                    {{ comment.content|nl2br }}
                </p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="small text-muted text-end mb-1">
            Par {{ comment.user.userIdentifier|default('Anonyme') }} le {{ comment.createdAt|date("d/m/y \Ã  H\\hi") }}{% if is_granted(constant('App\\Security\\Voter\\CommentVoter::DELETE'), comment) %} - {% include 'comment/_delete_form.html.twig' %}{% endif %}
        </div>
    </div>
{% endfor %}
