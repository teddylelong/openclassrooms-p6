<header id="website-header" class="container-fluid bg-primary px-0">
    {% block header %}

        <nav class="navbar container navbar-expand-md navbar-dark py-2">
            {% block navigation %}

                <a href="{{ path('app_home') }}" class="navbar-brand">
                    <img src="{{ asset('/assets/images/logo-primary.png') }}" height="100" alt="SnowTricks">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item px-2">
                            <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                        </li>

                        <li class="nav-item px-2">
                            <a class="nav-link" href="{{ path('app_figure_index') }}">Figures</a>
                        </li>

                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li class="nav-item px-2">
                                <a class="nav-link" href="{{ path('app_figure_new') }}">Ajouter une figure</a>
                            </li>
                            <li class="nav-item px-2">
                                <a class="nav-link" href="{{ path('app_user_profile', {'id': app.user.id}) }}">Mon profil</a>
                            </li>
                            <li class="nav-item px-2">
                                <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                            </li>
                        {% else %}
                            <li class="nav-item px-2">
                                <a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a>
                            </li>
                            <li class="nav-item px-2">
                                <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>

            {% endblock navigation %}
        </nav>

    {% endblock header %}
</header>