    <p>
        <span>Bonjour, {{ app.user.username }} !</span> -
        <a href="{{ path('app_figure_index') }}">Figures</a> -
        <a href="{{ path('app_figure_new') }}">Ajouter une figure</a> -
        <a href="{{ path('app_user_profile', {'id': app.user.id})}}">Mon profil</a> -
